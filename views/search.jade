doctype html
html(lang='en-US')
  head
    meta(http-equiv='Content-Type', content='text/html;charset=utf-8')
    title Input Autocomplete Suggestions Demo
    link(rel='shortcut icon', href='http://designshack.net/favicon.ico')
    link(rel='icon', href='http://designshack.net/favicon.ico')
    link(rel='stylesheet', type='text/css', media='all', href='/stylesheets/search.css')
    script(type='text/javascript', src='/javascripts/jquery-1.9.1.min.js')
    script(type='text/javascript', src='/javascripts/jquery.autocomplete.min.js')
    script(type='text/javascript', src='/javascripts/currency-autocomplete.js')
  body
    #topbar
      a(href='http://designshack.net') Back to Design Shack
    #w
      #content
        h1 World Currencies Autocomplete Search
        p
          | Just start typing and results will be supplied from the JavaScript. Check out 
          a(href='https://github.com/devbridge/jQuery-Autocomplete') jQuery Autocomplete
          |  on Github.
        #searchfield
          form
            input#autocomplete.biginput(type='text', name='currency')
        // @end #searchfield
        #outputbox
          p#outputcontent Choose a currency and the results will display here.
      // @end #content
    // @end #w
